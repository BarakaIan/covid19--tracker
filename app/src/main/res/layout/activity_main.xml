    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="39dp"
        android:text="WELCOME"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameNameTextView"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textNameTextView"
        android:layout_centerInParent="true"
        android:layout_marginBottom="98dp"
        android:text="TO"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ianNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="351dp"
        android:fontFamily="sans-serif"
        android:text="TRACKER APP"
        android:textColor="@color/white"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textNameTextView"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/HomepageEnterButton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="348dp"
        android:text="COVID"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/HomepageEnterButton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="Enter the country"
        android:padding="10dp" />

    <Button
        android:id="@+id/HomepageEnterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/purple_500"
        android:text="Enter"
        android:textColor="@color/design_default_color_background" />

</RelativeLayout>