<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/doctor" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="COVID TRACKER"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!--    Get user input in the edit text-->

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="735dp"
        android:layout_height="91dp"
        android:layout_above="@id/HomepageEnterButton"
        android:layout_centerVertical="true"
        android:layout_marginBottom="38dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-medium"
        android:hint="Enter your user name"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <Button
        android:id="@+id/HomepageEnterButton"
        android:layout_width="675dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="Get Started"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="50sp"
        android:textStyle="normal"
        android:fontFamily="monospace"
        android:lineSpacingExtra="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"/>
</RelativeLayout>