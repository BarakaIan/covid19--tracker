<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/virus_horizontal"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="ConaStat"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingRight="100dp"
        android:text="About Us"
        android:textColor="@color/white"
        android:textSize="39sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/covid" />

    <EditText
        android:id="@+id/continentEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/findCountryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_blue_light"
        android:hint="Enter country"
        android:padding="5dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/countryEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/findCountryButton"
        android:layout_marginBottom="144dp"
        android:background="@android:color/background_light"
        android:padding="5dp"
        android:text="Staying home can save lives.Protect yourself and others around you by knowing the facts and taking appropriate precautions"
        android:textSize="30sp" />

    <Button
        android:id="@+id/findCountryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:text="Find Country"
        android:textColor="@color/black"
        android:textSize="30sp" />

</RelativeLayout>